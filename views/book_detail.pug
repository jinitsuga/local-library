extends layout 

block content 
    title= title

    span  #{book.title}

    span  #{book.genre.name} 

    h4 Copies 
        ul 
            each copy in copies 
                li 
                    a(href=copy.url) #{copy.title} #{copy.imprint}
                    p #{copy.status} 
            else 
                p No copies of this book.         
              
